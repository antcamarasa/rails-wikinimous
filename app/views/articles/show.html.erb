<h1><%= @article.title %></h1>
<p> <%=  @article.content %></p>

<%= link_to "Create", new_article_path(@article), class: "btn-primary btn" %>
<%= link_to "Delete article", article_path(@article), method: :delete, data: { confirm: "Are you sure ?"}, class: "btn-secondary btn" %>
<%= link_to "Update article", edit_article_path(@article), class: "btn-warning btn"%>
<%= link_to "Back", articles_path, class: "btn-info btn"%>
